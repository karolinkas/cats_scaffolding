<% @cats.each do |cat| %>

  <li>

    <%= cat.name %>

    <span class='birthday'>

      <!-- Only format the date if birth_date exists -->
      <%= cat.birthday.to_s(:short) if cat.birthday %>

    </span>

    <span class='actions'>
      <%= link_to "More Info", cat_path(cat) %>
      <%= link_to "Delete", cat_path(cat), method: :delete,
                                  data: { confirm: "Are you sure?" }%>
    </span>

    <strong>
      <!-- Check if it has no owner, display it -->
      <%= cat.owner.nil? ? "No Owner" :

                           link_to("Has an owner", cat.owner) %>
    </strong>

  </li>

<% end %>