<ul>
			<% @cats.each do |cat| %>

			<li>

				<%= cat.name %>

				<span class='birthday'>

				<%= cat.birthday.to_s(:short) %>

				</span>


				<span class="actions">
					<%= link_to "edit", edit_cat_path(cat) %>
					<%= link_to "remove", cat_path(cat), method: :delete, 
					data: { confirm: 'Sure?' } %> 


				</span>


        <%= cat.owner.nil? ? "No owner" : "Has an owner" %>

				</li>

				<% end %>

	</ul>

