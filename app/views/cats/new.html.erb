<h1>Cats#new</h1>


<%= form_for @cat do |f| %>

	<% if @cat.errors.any? %>
    <div class="form-errors">
      <ul>
        <% @cat.errors.full_messages.each do |message| %>
          <li><%=message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

		<p>

		<%= f.label :name %>
		<%= f.text_field :name, class: "input_name" %>
		</p>
		
		<p>

		<%= f.label :birthday %>
		<%= f.date_select :birthday, class: "input_birthday"  %>
		</p>

<p>

<%= f.submit %>
</p>

<% end %>

